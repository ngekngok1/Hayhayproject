<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/layout"
    tools:context=".Helpcenter">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/grad">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/baloo_thambi"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="18sp" />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/logo1"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/img"
                    android:layout_alignParentEnd="true"
                    >
                </ImageView>
            </RelativeLayout>

        </Toolbar>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/top"/>

            <TextView
                android:id="@+id/aboutus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/black_han_sans"
                android:text="Frequently Asked Questions (FAQs)"
                android:textColor="@color/black"
                android:textSize="17dp"
                 />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aboutus"
                android:layout_marginStart="20dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/baloo_thambi"
                android:text="1. What is HayHay?"
                android:textColor="@color/gold"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:fontFamily="@font/amaranth"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text=""
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text2"
                android:text="2. How Can I Contact HayHay Support?"
                android:layout_width="match_parent"
                android:textColor="@color/gold"
                android:fontFamily="@font/baloo_thambi"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:textSize="17dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:fontFamily="@font/amaranth"
                android:textColor="@color/black"
                android:text=""
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text4"
                android:text="Getting Started"
                android:layout_width="match_parent"
                android:fontFamily="@font/black_han_sans"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3"
                android:textSize="17dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp" />
            <TextView
                android:id="@+id/text5"
                android:text="3. Creating an Account"
                android:layout_width="match_parent"
                android:fontFamily="@font/baloo_thambi"
                android:textColor="@color/gold"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text4"
                android:textSize="17dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:textColor="@color/black"
                android:layout_below="@+id/text5"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text=""
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text7"
                android:text="4. Password Recovery"
                android:layout_width="match_parent"
                android:fontFamily="@font/baloo_thambi"
                android:textColor="@color/gold"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text6"
                android:textSize="17dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp" />
            <TextView
                android:id="@+id/text22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text7"
                android:fontFamily="@font/amaranth"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text=""
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text8"
                android:text="Troubleshooting"
                android:layout_width="match_parent"
                android:fontFamily="@font/black_han_sans"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text22"
                android:textSize="17dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/text9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text8"
                android:layout_marginStart="20dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/baloo_thambi"
                android:text="5. App/Platform Not Working Properly"
                android:textColor="@color/gold"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/text10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:textColor="@color/black"
                android:layout_below="@+id/text9"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text=""
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text11"
                android:text="Privacy and Security"
                android:layout_width="match_parent"
                android:fontFamily="@font/black_han_sans"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text10"
                android:textSize="17dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp" />
            <TextView
                android:id="@+id/text12"
                android:text="6. Privacy Policy"
                android:layout_width="match_parent"
                android:fontFamily="@font/baloo_thambi"
                android:textColor="@color/gold"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text11"
                android:textSize="17dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/text13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text12"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/amaranth"
                android:textColor="@color/black"
                android:gravity="center"
                android:text=""
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text14"
                android:text="7. Security Concerns"
                android:layout_width="match_parent"
                android:fontFamily="@font/baloo_thambi"
                android:textColor="@color/gold"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text13"
                android:textSize="17dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/text15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text14"
                android:fontFamily="@font/amaranth"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text=""
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text16"
                android:text="Additional Assistance"
                android:layout_width="match_parent"
                android:fontFamily="@font/black_han_sans"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text15"
                android:textSize="17dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp" />
            <TextView
                android:id="@+id/text17"
                android:text="8. Feedback and Suggestions"
                android:layout_width="match_parent"
                android:fontFamily="@font/baloo_thambi"
                android:textColor="@color/gold"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text16"
                android:textSize="17dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/text18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth"
                android:textColor="@color/black"
                android:layout_below="@+id/text17"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text=""
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text19"
                android:text="9. Terms of Service"
                android:layout_width="match_parent"
                android:fontFamily="@font/baloo_thambi"
                android:textColor="@color/gold"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text18"
                android:textSize="17dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/text20"
                android:layout_width="match_parent"
                android:fontFamily="@font/amaranth"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text19"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text=""
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text20"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:text="If you still have questions or need assistance, don't hesitate to contact our support team."
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text21"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:text="We're here to help you make the most of your HayHay experience!"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout1"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_facebook"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/facebook_logo"
                android:layout_marginEnd="16dp"
                android:onClick="openFacebook" />

            <ImageView
                android:id="@+id/iv_instagram"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/instagram_logo"
                android:layout_marginEnd="16dp"
                android:onClick="openInstagram" />

            <ImageView
                android:id="@+id/iv_gmail"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/gmail_logo"
                android:layout_marginEnd="16dp"
                android:onClick="openGmail" />

            <ImageView
                android:id="@+id/iv_twitter"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/twitter_logo"
                android:layout_marginEnd="16dp"
                android:onClick="openTwitter" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
