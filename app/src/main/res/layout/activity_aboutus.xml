<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/layout"
    tools:context=".Aboutus">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:background="@color/gold"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center"
                android:text="Welcome to Hayhay"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:textColor="@color/black"
                android:layout_marginStart="40dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/amaranth"
                android:gravity="center"
                android:text="We are a dynamic group of innovative and passionate individuals, who are currently in diverse fields,dedicated to make an automated and retractable clothes rack to help busy individuals not to worry about their washed clothes. and a shared commitment to excellence, creativity, and collaboration."
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:textColor="@color/black"
                android:text="Our Vision:"
                android:background="@color/gold"
                android:fontFamily="@font/alfa_slab_one"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:layout_marginStart="40dp"
                android:layout_marginTop="-10dp"
                android:textColor="@color/black"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/amaranth"
                android:gravity="center"
                android:text="To create a better everyday life for the many people without the thought of worrying about their washed clothes."
                android:textSize="16dp" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_below="@+id/text3"
                android:text="Meet the Team:"
                android:background="@color/gold"
                android:fontFamily="@font/alfa_slab_one"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text4"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/black_han_sans"
                android:gravity="center"
                android:text="Jhean Oaper Pevida - Project Manager"
                android:textSize="13dp" />
            <TextView
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text5"
                android:layout_marginStart="40dp"
                android:textColor="@color/black"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/black_han_sans"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Jomart Guantia - Hacker"
                android:textSize="13dp" />
            <TextView
                android:id="@+id/text7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/black_han_sans"
                android:textColor="@color/black"
                android:layout_below="@+id/text6"
                android:layout_marginStart="40dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Gerald Durano - Hacker"
                android:textSize="13dp" />
            <TextView
                android:id="@+id/text8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text7"
                android:layout_marginStart="40dp"
                android:textColor="@color/black"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/black_han_sans"
                android:gravity="center"
                android:text=" Philip NiÃ±o Gutierrez - Hipster"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/text9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text8"
                android:text="Collaborate with Us:"
                android:background="@color/gold"
                android:fontFamily="@font/alfa_slab_one"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/text10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text9"
                android:layout_marginStart="40dp"
                android:layout_marginTop="-10dp"
                android:textColor="@color/black"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:fontFamily="@font/amaranth"
                android:text="Join forces with Hayhay Team! Together, let's achieve greatness!"
                android:textSize="13dp" />
        </RelativeLayout>

        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout1"
            android:layout_marginTop="-15dp"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_facebook"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/facebook_logo"
                android:layout_marginEnd="16dp"
                android:onClick="openFacebook" />

            <ImageView
                android:id="@+id/iv_instagram"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/instagram_logo"
                android:layout_marginEnd="16dp"
                android:onClick="openInstagram" />

            <ImageView
                android:id="@+id/iv_gmail"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/gmail_logo"
                android:layout_marginEnd="16dp"
                android:onClick="openGmail" />

            <ImageView
                android:id="@+id/iv_twitter"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/twitter_logo"
                android:layout_marginEnd="16dp"
                android:onClick="openTwitter" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
