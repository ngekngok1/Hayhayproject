<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Homepage">

    <View
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="591dp"
        android:background="@drawable/backgroundgrad"></View>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topview"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:columnCount="2"
        android:rowCount="3">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:id="@+id/deviceback"
            android:layout_margin="11dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ImageButton
                    android:layout_width="80dp"
                    android:id="@+id/notification"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@color/white"
                    android:src="@drawable/baseline_notifications_24"></ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:text="Notification"
                    android:textSize="15dp"
                    android:id="@+id/textnotification"></TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:id="@+id/notifback"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="11dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/dark1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@color/white"
                    android:src="@drawable/baseline_dark_mode_24"></ImageButton
                    >

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:text="Dark Mode"
                    android:textSize="15dp"></TextView>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:id="@+id/settingsback"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="11dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/settings"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/baseline_settings_24"></ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textsettings"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:text="Settings"
                    android:textSize="15dp"></TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feedbackback"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="11dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >

                <ImageButton
                    android:layout_width="80dp"
                    android:id="@+id/feedback"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/baseline_feedback_24"></ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/textfeedback"
                    android:layout_marginBottom="30dp"
                    android:text="Feedback"
                    android:textSize="15dp"></TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/name"
        android:columnCount="2"
        android:rowCount="2">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/day"
                    android:textColor="@color/lightgray"
                    android:text="Good Day"
                    android:textSize="35dp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/lightgray"
                    android:layout_marginTop="10dp"
                    android:id="@+id/name1"
                    android:text=""
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>
        </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:src="@drawable/img"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">
    </ImageView>
    </GridLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/name"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/weatherback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="7dp">


            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/sunrain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="80dp"
                android:src="@drawable/sunnyrain1"
                android:visibility="invisible"></pl.droidsonroids.gif.GifImageView>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/cloudy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="80dp"
                android:src="@drawable/cloudy"
                android:visibility="invisible"></pl.droidsonroids.gif.GifImageView>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/cloudynight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="80dp"
                android:src="@drawable/cloudynight"
                android:visibility="invisible"></pl.droidsonroids.gif.GifImageView>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/nightrain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="80dp"
                android:src="@drawable/nightrain"
                android:visibility="invisible"></pl.droidsonroids.gif.GifImageView>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/thunderstorm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="80dp"
                android:src="@drawable/thunderstorm"
                android:visibility="invisible"></pl.droidsonroids.gif.GifImageView>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/cloudyday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="80dp"
                android:src="@drawable/cloudyday"
                android:visibility="invisible"></pl.droidsonroids.gif.GifImageView>


            <TextView
                android:id="@+id/loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:layout_marginBottom="-8dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="bottom"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/loc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="20dp"
                android:layout_marginBottom="-7dp"
                android:layout_gravity="bottom">

            </TextView>
            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loc"
                android:layout_gravity="bottom"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="end"
                android:textStyle="bold"
                android:textSize="25dp" />


        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginStart="15dp"
            android:id="@+id/devicee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device:"
            android:layout_below="@+id/weatherback"
            android:layout_marginTop="10dp"
            android:textSize="20dp"></TextView>

        <Button
            android:layout_marginStart="15dp"
            android:text="Fan"
            android:background="@drawable/edittext"
            android:id="@+id/fan"
            android:layout_marginTop="50dp"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_below="@+id/weatherback">

        </Button>
        <Button
            android:text="Cover"
            android:id="@+id/cover"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="50dp"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:background="@drawable/edittext"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/weatherback"
            android:layout_gravity="center_vertical">

        </Button>

    </RelativeLayout>

</RelativeLayout>

</ScrollView>


